{% extends 'base.html.twig' %}
{% block main %}
    <h1>Cr√©er une sortie</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <form method="post">
        {{ form_start(sortieForm) }}

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.nom) }}
            </span>
            {{ form_widget(sortieForm.nom) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.dateDebut) }}
            </span>
            {{ form_widget(sortieForm.dateDebut) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.dateCloture) }}
            </span>
            {{ form_widget(sortieForm.dateCloture) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.nbInscriptionMax) }}
            </span>
            {{ form_widget(sortieForm.nbInscriptionMax) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.duree) }}
            </span>
            {{ form_widget(sortieForm.duree) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.commentaire) }}
            </span>
            {{ form_widget(sortieForm.commentaire) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.lieu) }}
            </span>
            {{ form_widget(sortieForm.lieu) }}
        </div>

        <div class="form-group row">
            <span class="col-sm-2 col-form-label">
                {{ form_label(sortieForm.ville) }}
            </span>
            {{ form_widget(sortieForm.ville) }}
        </div>

        <div class="form-group row">
            {{ form_widget(sortieForm.publish) }}
            {{ form_widget(sortieForm.save) }}
            <a class="ml-auto btn btn-danger mx-3 text-white">Annuler</a>
        </div>
        {{ form_rest(sortieForm) }}
    </form>
{% endblock %}