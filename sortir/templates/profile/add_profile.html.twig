{% extends 'base.html.twig' %}
{% block fichier %}profil{% endblock %}

{% block main %}

    <h1>Mon profil</h1>
    <form method="post">
        {{ form_start(profilForm) }}
        <div class="form-group row">
         <span class="col-sm-2 col-form-label">
         {{ form_label(profilForm.username) }}
            </span>


            {{ form_widget(profilForm.username) }}


        </div>
        <div class="form-group row">
 <span class="col-sm-2 col-form-label">
         {{ form_label(profilForm.nom) }}
            </span>
            {{ form_widget(profilForm.nom) }}

        </div>
        <div class="form-group row">
 <span class="col-sm-2 col-form-label">
         {{ form_label(profilForm.prenom) }}
            </span>
            {{ form_widget(profilForm.prenom) }}

        </div>

        <div class="form-group row">
 <span class="col-sm-2 col-form-label">
         {{ form_label(profilForm.telephone) }}
            </span>
            {{ form_widget(profilForm.telephone) }}

        </div>

        <div class="form-group row">
 <span class="col-sm-2 col-form-label">
         {{ form_label(profilForm.mail) }}
            </span>
            {{ form_widget(profilForm.mail) }}

        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(profilForm.password) }}
            </div>
        </div>


        <div class="form-group row">
 <span class="col-sm-2 col-form-label">
         {{ form_label(profilForm.site) }}
            </span>
            {{ form_widget(profilForm.site) }}

        </div>

        {{ form_rest(profilForm) }}
        <div class="form-group row">
            <label for="Telecharger">Télécharger vers le serveur</label>
            <input type="file" class="form-control-file" id="Telecharger">
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" value="Enregistrer">

                <a class="btn btn-danger" href="{{ path("profile-affichage") }}">Annuler</a>
            </div>
        </div>


    </form>

{% endblock %}