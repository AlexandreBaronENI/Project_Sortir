{% extends 'base.html.twig' %}
{% block main %}
<table class="display table table-striped table-bordered table-responsive" style="width:100%">
    <thead>
        <tr>
            <th>Nom</th>
            <th>adresse</th>
            <th>Ville</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for lieu in (lieux) %}
        <tr>
            <td>{{lieu.nom}}</td>
            <td>{{lieu.adresse}}</td>
            <td>{{ lieu.ville.nom}}</td>
            <td>
                 <a href="{{ path("edit-location", {id:lieu.id}) }}">Modifier le lieu</a>
                 <a href="{{ path("delete-location", {id:lieu.id}) }}">Supprimer le lieu</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}