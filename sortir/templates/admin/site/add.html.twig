{% extends 'base.html.twig' %}
{% block fichier %}profil{% endblock %}

{% block main %}
    <form method="post">
    {{ form_start(siteForm) }}
    <div class="form-group row">
        <span class="col-md-2 col-form-label">
            {{ form_label(siteForm.nom) }}
        </span>
        {{ form_widget(siteForm.nom) }}
    </div>
    <div class="form-group row">
        <div class="col-md-10">
            <input type="submit" class="btn btn-primary" value="Enregistrer">

            <a class="btn btn-danger" href="{{ path('admin-sites')}}">Annuler</button>
        </div>
    </div>
    {{ form_rest(siteForm) }}
{% endblock %}