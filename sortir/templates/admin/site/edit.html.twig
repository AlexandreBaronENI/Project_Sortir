{% extends 'base.html.twig' %}
{% block fichier %}profil{% endblock %}

{% block main %}
<h1>Edition du site</h1>
<form method="post">
    {{ form_start(siteForm) }}
    <div class="form-group row">
        <span class="col-sm-2 col-form-label">
            {{ form_label(siteForm.nom) }}
        </span>
        {{ form_widget(siteForm.nom) }}
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Enregistrer">

            <a class="btn btn-danger" href="{{ path("admin-sites")}}">Annuler</a>
        </div>
    </div>
        {{ form_rest(siteForm) }}
{% endblock %}